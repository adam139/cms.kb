<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="cms.db">
<head>
      <metal:block fill-slot="top_slot">
        <tal:insert tal:replace="nothing"
              tal:define="disable_column_two python:request.set('disable_plone.rightcolumn', 1);
              disable_column_one python:request.set('disable_plone.leftcolumn', 1)" />
      </metal:block>
</head>
<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
    <div id="workspace" class="container-fluid"
    	tal:define="p python:context.absolute_url()">      	
     <div class="row row-1">         
       <div class="col-xs-12 col-md-12">
       	<h3 class="title text-center" tal:content="python:context.title">context/title</h3>
       	<p class="description" tal:content="python:context.description">context/description</p>
       </div>
     </div>
     <div class="row row-2 relative-yaoes">
       <div class="col-xs-12 col-md-12 table-responsive">
         <table class="table table-striped table-bordered">
         	<caption>相关药物</caption>
         	<thead>
         		<tr>
         			<th>名称</th>
         			<th>药味</th>
         		</tr>
         	</thead>
         	<tbody id="yaoxing-structure"         		
                tal:content="structure python:view.relative_yaoes(context.id)">
         		<tr>
         			<td>name</td>
         			<td>number</td>
         		</tr>
         	</tbody>          
        </table>
     </div>     	
     </div>	
     <div class="row row-3 details">         
       <div class="col-xs-12 col-md-12">
         <div id="parent-fieldname-text"
          tal:condition="context/text"
          tal:content="structure python:context.text.output_relative_to(view.context)">
        </div>
     </div>
   </div>
  </div>               
 </tal:main-macro>
</metal:main>
</body>
</html>
